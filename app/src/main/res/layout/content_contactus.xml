<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gurukul.poultrypunch.contactus"
    tools:showIn="@layout/contactus">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:showIn="@layout/team"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bsrana"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                >

                <TextView
                    android:id="@+id/row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_centerHorizontal="true"
                    android:text="POULTRY PUNCH PUBLICATIONS (I) Pvt. Ltd. \n"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/splashscreenhen"
                    android:layout_below="@+id/row1"
                    android:id="@+id/row2"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:id="@+id/row3"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_below="@+id/row2"
                    android:text="\n Office Location"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:typeface="sans"
                    android:id="@+id/row4"
                    android:textSize="22dp"
                    android:textStyle="italic"
                    android:layout_below="@+id/row3"
                    android:text="
25 Thyag Raj Nagar Market
New Delhi, 1100003
Phone: 9312700599
Email:	ppunch@rediffmail.com
ppunch25@gmail.com
Mobile: 7838602297"
                    />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>





</RelativeLayout>
