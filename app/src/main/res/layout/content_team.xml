<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/team"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.gurukul.poultrypunch.Team"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bsrana"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >
      <ImageView
          android:layout_width="match_parent"
          android:layout_height="300dp"
          android:src="@drawable/bsrana1"

          android:id="@+id/row1"
          />

    <TextView
        android:id="@+id/row2"
        android:layout_below="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="@color/cardview_dark_background"
        android:layout_centerHorizontal="true"
        android:text="Mr. B.S Rana \n Editor and Publisher"
     />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:id="@+id/row3"
        android:textSize="25dp"
        android:textStyle="italic"
        android:layout_below="@+id/row2"
        android:text="@string/bsrana_team"
        />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pankajrana"
        android:layout_below="@+id/bsrana"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/pankaj"
            android:id="@+id/prow1"
            />

        <TextView
            android:id="@+id/prow2"
            android:layout_below="@+id/prow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_centerHorizontal="true"
            android:text="Mr Pankaj Rana \n Marketing Director"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:id="@+id/prow3"
            android:textSize="25dp"
            android:textStyle="italic"
            android:layout_below="@+id/prow2"
            android:text="@string/pankaj_team"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/indrarana"
        android:layout_below="@+id/pankajrana"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/indra"
            android:id="@+id/irow1"
            />

        <TextView
            android:id="@+id/irow2"
            android:layout_below="@+id/irow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="@color/cardview_dark_background"
            android:layout_centerHorizontal="true"
            android:text="Mrs Indra Rana \n Director Communications"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:id="@+id/irow3"
            android:layout_below="@+id/irow2"
            android:textSize="25dp"
            android:textStyle="italic"

            android:text="@string/indrarana_team"
            />
    </RelativeLayout>



</RelativeLayout>
</ScrollView>