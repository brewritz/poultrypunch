<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--The color of all the UI controls (not only buttons,
        but also floating action buttons, checkboxes etc.) is managed by the attribute
        colorAccent -->
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <!-- ButtonAppTheme style set for button background
         in case we just need to change background color
          <item name="colorButtonNormal">@color/Red</item>
         -->
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
        <!--<item name="android:background">@drawable/bg </item> -->
    </style>

    <style name="AppTheme.ButtonAppTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/loginbutton</item>
    </style>

    <style name="AppTheme.ButtonOrangeTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/loginbuttonorange</item>
    </style>

    <style name="AppTheme.ButtonGreenTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/loginbuttongreen</item>
    </style>

    <style name="AppTheme.ButtonBlueTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/loginbuttonblue</item>
    </style>

    <style name="AppTheme.ButtonBrownTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/loginbuttonbrown</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoTitleBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Orange" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryOrange</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkOrange</item>
        <item name="colorAccent">@color/colorAccentOrange</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonOrangeTheme</item>
    </style>

    <style name="AppTheme.Green" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonGreenTheme</item>


    </style>

    <style name="AppTheme.Blue" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonBlueTheme
        </item>

    </style>

    <style name="AppTheme.Brown" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryEntertainment</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkEntertainment</item>
        <item name="android:buttonStyle">@style/AppTheme.ButtonBrownTheme</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreenxml</item>
    </style>

    <style name="AppTheme.ButtonCustom">
        <item name="android:background">@drawable/loginbutton</item>
    </style>

</resources>
