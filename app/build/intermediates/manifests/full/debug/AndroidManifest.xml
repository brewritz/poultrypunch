<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gurukul.poultrypunch"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="26" />

    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="android.support.VERSION"
        android:value="26.0.0-alpha1" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.gurukul.poultrypunch.MainActivity"
            android:label="@string/app_name"
            android:noHistory="true"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.gurukul.poultrypunch.Dashboard"
            android:label="@string/title_activity_dashboard"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gurukul.poultrypunch.LoginActivity"
            android:label="@string/title_activity_login"
            android:noHistory="true"
            android:theme="@style/AppTheme.NoTitleBar"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name="com.gurukul.poultrypunch.readFile"
            android:label="@string/title_activity_read_file"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gurukul.poultrypunch.Newslist"
            android:label="@string/title_activity_newslist"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gurukul.poultrypunch.startOnBoard"
            android:label="Poultry Punch"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gurukul.poultrypunch.ArticlesList"
            android:label="@string/title_activity_articles_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gurukul.poultrypunch.NewsDetail"
            android:label="@string/title_activity_news_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gurukul.poultrypunch.navigate"
            android:label="@string/title_activity_navigate"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gurukul.poultrypunch.Team"
            android:label="@string/title_activity_team"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gurukul.poultrypunch.contactus"
            android:label="@string/title_activity_contactus"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gurukul.poultrypunch.SignUp"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.gurukul.poultrypunch.AboutUs"
            android:label="@string/title_activity_about_us"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>